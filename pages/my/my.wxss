/* pages/my/my.wxss */
.container{
  height: 100vh;
  background-attachment: fixed;
  background-position: bottom center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  /* background-image: url("https://picb.oss-cn-beijing.aliyuncs.com/img/official-bg-white.png"); */
  background-color: #f3f3f3;
}



.info{
  position: fixed;
  top: 0rpx;
  height: 280rpx;
  width: 100%;
  /* background-color: #f9fafd; */
  background-color: #c40714;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx; */
}
.info-userAvatarUrl{
  position: relative;
  top: 20rpx;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userAvatarUrl{
  height: 120rpx;
  width: 120rpx;
}
.nickname{
  position: relative;
  top: 40rpx;
  color: #ffffff;
}



.status{
  position: fixed;
  top: 250rpx;
  height: 85rpx;
  width: 90%;
  background-color: #ffffff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  z-index: 1;
  border: 1px solid #F8F8F8;
  border-radius: 10rpx;
  box-shadow: 0px 1px 3px #888888;
}
.status-image{
  margin-left: 50rpx;
  height: 40rpx;
  width: 40rpx;
}
.status-text{
  margin-left: 10rpx;
  color: #333333;
  font-weight: 450;
  font-size: 28rpx;
}
.status-id{
  margin-left: 10rpx;
  color: #888888;
  font-weight: 420;
  font-size: 28rpx;
}

.index{
  position: fixed;
  top: 380rpx;
  height: 255rpx;
  width: 90%;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  border: 1px solid #F8F8F8;
  border-radius: 10rpx;
  box-shadow: 0px 1px 3px #888888
}
button::after{ border: none; }
.index-items{
  height: 85rpx;
  width: 675rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: #ffffff;
  border-bottom: 2px solid #F8F8F8;
  /* box-shadow: 0px 1px 3px #888888 */
}
.index-last-item{
  height: 85rpx;
  width: 675rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  background-color: #ffffff;
  align-items: center;
}
.index-image{
  margin-left: 20rpx;
  height: 40rpx;
  width: 40rpx;
}
.index-text{
  margin-left: 10rpx;
  color: #333333;
  font-weight: 450;
  font-size: 28rpx;
}

.motto{
  position: fixed;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #7b7e82;
  opacity: 0.3;
}