/* pages/bind/bind.wxss */
.container{
  height: 100vh;
  /* background-image: url("https://costinyuan.com/img/miniprogram/background.jpg"); */
  background-attachment: fixed;
  background-position: bottom;
  background-repeat: no-repeat;
  background-size: 100% 150rpx;
  background-color: #f3f3f3;
}
.bg{
  position: fixed;
  top: 0;
  height: 300rpx;
  width: 750rpx;
  background-color: #c40714
}
.login{
  background: rgba(255, 255, 255, 1);
  position: fixed;
  top: 180rpx;
  height: 600rpx;
  width: 675rpx;
  border-radius: 10rpx;
  box-shadow: 0px 2px 10px #3333;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.title{
  position: absolute;
  top: 70rpx;
  left: 40rpx;
  color: #333333;
  font-size: 36rpx; 
  font-weight: 500;
}
.username{
  position: relative;
  left: 37.5rpx;
  top: 20rpx;
  width: 580rpx;
  height: 80rpx;
  border: 1px solid #888888;
  border-radius: 10rpx;
  background-color: #ffffff;
  font-size: 30rpx;
  font-weight: 300;
  padding-left: 20rpx;
  box-shadow: 0px 1px 3px #3333;
}
.password{
  position: relative;
  left: 37.5rpx;
  top: 40rpx;
  width: 580rpx;
  height: 80rpx;
  border: 1px solid #888888;
  border-radius: 10rpx;
  background-color: #ffffff;
  font-size: 30rpx;
  font-weight: 300;
  padding-left: 20rpx;
  box-shadow: 0px 1px 3px #3333;
}

.check{
  position: relative;
  top: 80rpx;
  left: 140rpx;
  display: flex;
  flex-direction: row;
  font-size: 11pt;
}
.checkbox{
  position: relative;
  bottom: 5rpx;
  transform: scale(0.8,0.8);
}
.proxy{
  color: blue;
  text-decoration: underline;
}

.login button{
  position: relative;
  top: 100rpx;
  width: 600rpx;
  color: #ffffff;
  background-color: #c40714;
  box-shadow: 0px 1px 3px #3333;
  font-weight: 400;
}

.tips{
  position: fixed;
  bottom: 50rpx;
  font-size: 24rpx;
  color: #333333;
  opacity: 0.3;
}